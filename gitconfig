[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input

	# http://www.git-tower.com/blog/make-git-rebase-safe-on-osx/
	trustctime = false

[color]
	ui = auto

[fetch]
	prune = true

[alias]
	a = add
	aa = add --all .
	b = checkout --track
	br = branch
	c = commit
	ca = commit --amend
	co = checkout
	cp = cherry-pick
	cpc = cherry-pick --continue
	cpn = cherry-pick --no-commit
	d = diff
	ds = diff --cached
	f = fetch
	l = pull
	lg = log --color --graph --pretty=format:'%Cgreen%h%Creset %C(yellow)(%cd)%Creset %C(bold blue)<%an>%Creset -%C(yellow)%d%Creset %s %Creset'
	lga = !git lg --all
	lr = pull --rebase=preserve
	p = push -u
	pf = push --force
	r = rebase
	ra = rebase --abort
	rc = rebase --continue
	rh = reset --hard
	ri = rebase -i
	s = status
	sh = show
	ss = stash

	aliases = config --get-regexp alias
	contributors = shortlog --summary --numbered
	credit = commit --amend --author
	stash-all = stash push --include-untracked
	stash-keep = !git stash-all --keep-index

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[user]
	name = Kostya Esmukov
	email = kostya@esmukov.ru
	signingkey = 2D3B9C1712FF84F7

[commit]
	gpgsign = true

